<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Welcome to Moives Store APP"
        android:layout_marginBottom="10dp"
        android:textColorHighlight="@android:color/holo_blue_light"
        />
    <Spinner
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:id="@+id/spinnertitle"
        android:layout_height="wrap_content"
        android:textColorHighlight="@android:color/holo_purple"

        />



    <Spinner
        android:id="@+id/spinnerYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="8dp"
        android:spinnerMode="dialog"
        android:textColorHighlight="@android:color/holo_purple"

        />

    <Spinner
        android:id="@+id/spenergene"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="200dp"
        android:layout_marginBottom="8dp"
        android:textColorHighlight="@android:color/holo_purple"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Select Movies"
        android:onClick="btnSelectMoviesOnClick"
        android:id="@+id/btnselectmovies"

        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        app:srcCompat="@drawable/download" />


</LinearLayout>